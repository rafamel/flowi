{
  "name": "flowi",
  "version": "0.3.0",
  "author": "Rafa Mel",
  "description": "Concatenate Joi validations or custom function validations. Personalize the output error message for each.",
  "homepage": "https://github.com/rafamel/flowi",
  "main": "./lib/index",
  "scripts": {
    "lint": "./node_modules/.bin/eslint lib/*.js",
    "test": "npm run test:lint && ./node_modules/.bin/jest ./test/*.js --runInBand --runTestsByPath --verbose",
    "test:lint": "./node_modules/.bin/eslint test/*.js",
    "prepublish": "npm run lint && npm run test:lint && ./node_modules/.bin/jest ./test/*.test.js --runTestsByPath",
    "update:packages": "rm -rf node_modules && rm package-lock.json && npm update --save/save-dev && npm install && npm outdated"
  },
  "contributors": [
    {
      "name": "Rafa Mel"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/flowi"
  },
  "license": "MIT",
  "keywords": [
    "validation",
    "validate",
    "Joi"
  ],
  "bugs": {
    "url": "https://github.com/rafamel/flowi/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/rafamel/flowi/raw/master/LICENSE"
    }
  ],
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest-cli": "^21.2.1"
  },
  "dependencies": {
    "is-promise": "^2.1.0",
    "joi": "^13.0.0"
  },
  "peerDependencies": {
    "joi": "^13.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
